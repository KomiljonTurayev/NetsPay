<resources xmlns:tools="http://schemas.android.com/tools">
       <!-- Base application theme. -->
    <style name="Theme.NetsPay_" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="colorSecondary">@color/blue_</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="MyBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MYBottomSheetStyle</item>
    </style>

    <style name="MYBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>



        <style name="home_line">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginLeft">12dp</item>
            <item name="layout_constraintEnd_toEndOf">parent</item>
            <item name="layout_constraintStart_toStartOf">parent</item>

        </style>

        <style name="title_left">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:gravity">center</item>
            <item name="android:textColor">#222222</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textSize">16sp</item>
        </style>

        <style name="title_right">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_gravity">center|right</item>
            <item name="android:layout_margin">4dp</item>
            <item name="android:gravity">center</item>
            <item name="android:padding">4dp</item>
            <item name="android:textColor">#DB3022</item>
            <item name="android:textSize">14sp</item>
        </style>

        <style name="MyTransparentBottomSheetDialogTheme" parent="Theme.AppCompat.Light">
            <item name="android:background">@android:color/transparent</item>
            <item name="android:colorBackground">@android:color/transparent</item>
        </style>

        <style name="buttom_sheet">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginTop">24dp</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:paddingLeft">8dp</item>
            <item name="android:textSize">20sp</item>
        </style>

        <style name="bottom_charecter">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">16sp</item>
        </style>

        <style name="text_setting">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_marginLeft">16dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">@color/black</item>
        </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_color_selector</item>
    </style>


</resources>